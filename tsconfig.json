{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "noLib": false,
        "preserveConstEnums": true,
        "strict": true,
        "sourceMap": true
    },
    "exclude": [
        "gulpfile.js",
        "node_modules",
        "release"
    ],
    "compileOnSave": false,
    "buildOnSave": false,
    "atom": {
        "rewriteTsconfig": false
    }
}
